@model Villa

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Villa</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input type="hidden" asp-for="ID" />

            <div class="col-10">
                <div class="p-3">
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Name" disabled class="form-control bg-secondary text-white border shadow" />
                        <label asp-for="Name" class="text-black"></label>
                    </div>

                    <div class="form-floating py-1 col-12">
                        <input asp-for="Description" disabled class="form-control bg-secondary text-white border shadow" />
                        <label asp-for="Description" class="text-black"></label>
                    </div>

                    <div class="form-floating py-1 col-12">
                        <input asp-for="Price" disabled class="form-control bg-secondary text-white border shadow" />
                        <label asp-for="Price" class="text-black"></label>
                    </div>

                    <div class="form-floating py-1 col-12">
                        <input asp-for="Sqft" disabled class="form-control bg-secondary text-white border shadow" />
                        <label asp-for="Sqft" class="text-black"></label>
                    </div>

                    <div class="form-floating py-1 col-12">
                        <input asp-for="Occupancy" disabled class="form-control bg-secondary text-white border shadow" />
                        <label asp-for="Occupancy" class="text-black"></label>
                    </div>

                    <div class="form-floating py-1 col-12">
                        <input asp-for="ImageUrl" disabled class="form-control bg-secondary text-white border shadow" />
                        <label asp-for="ImageUrl" class="text-black"></label>
                    </div>

                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-trash-fill"></i> Delete
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-2">
                @if (!string.IsNullOrEmpty(Model?.ImageUrl))
                {
                    <img src="@Model.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}